{
  "name": "notioc-canvas-mcp-server",
  "version": "1.2.0",
  "description": "AI-powered Canvas MCP server with 45 tools for comprehensive academic management through Claude Desktop",
  "main": "src/server.js",
  "type": "module",
  "bin": {
    "notioc-canvas-mcp-server": "src/server.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kuria-Mbatia/notioc-canvas-mcp-server.git"
  },
  "homepage": "https://github.com/Kuria-Mbatia/notioc-canvas-mcp-server",
  "bugs": {
    "url": "https://github.com/Kuria-Mbatia/notioc-canvas-mcp-server/issues"
  },
  "directories": {
    "example": "examples",
    "lib": "lib"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/src/server.js",
    "dev": "tsx watch src/server.ts",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t canvas-mcp-server .",
    "docker:run": "docker run --env-file .env canvas-mcp-server",
    "docker:dev": "docker-compose up --build",
    "docker:prod": "docker-compose -f docker-compose.yml up --build canvas-mcp-prod",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "npx audit-ci --moderate",
    "clean": "rm -rf dist && rm -rf node_modules/.cache",
    "prepare": "npm run build",
    "health-check": "node dist/src/health-check.js"
  },
  "keywords": [
    "mcp",
    "canvas",
    "education",
    "ai",
    "claude",
    "model-context-protocol",
    "lms",
    "notioc"
  ],
  "author": "Notioc Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "@xenova/transformers": "^2.17.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "fuse.js": "^7.0.0",
    "jsdom": "^26.1.0",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.2",
    "parse-link-header": "^2.0.0",
    "pdf-parse": "^1.1.1",
    "puppeteer": "^24.15.0",
    "ts-node": "^10.9.2",
    "zod": "^3.25.23"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^22.15.21",
    "@types/parse-link-header": "^2.0.3",
    "@types/pdf-parse": "^1.1.5",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^3.13.0",
    "typescript": "^5.8.3"
  }
}
