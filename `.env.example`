# Canvas API configuration
CANVAS_BASE_URL="https://psu.instructure.com"
CANVAS_ACCESS_TOKEN="YOUR_CANVAS_API_TOKEN_HERE"

# --- LlamaParse Document Processing (Optional) ---
# Enable LlamaParse for advanced document extraction (requires API key)
LLAMA_CLOUD_API_KEY=""
ENABLE_LLAMAPARSE=false
LLAMA_ONLY=false

# LlamaParse configuration
LLAMA_PARSE_RESULT_FORMAT=markdown
LLAMA_PARSE_TIMEOUT_MS=300000
LLAMA_PARSE_POLL_INTERVAL_MS=3000
LLAMA_PARSE_MAX_MB=50
LLAMA_PARSE_ALLOW_UPLOAD=false

# --- Autonomous Operation (Recommended) ---
# Enable automatic background updates (true or false)
ENABLE_BACKGROUND_INDEXING=true

# Auto-index on server startup (ensures fresh data)
RUN_INDEXER_ON_STARTUP=true

# How often to refresh (in hours) - default is 12 (twice daily)
INDEXING_INTERVAL_HOURS=12

# --- Smart Caching ---
# How old cached data can be (in hours) before it's refreshed. Default is 6.
# The indexer will skip refreshing courses with data newer than this.
CACHE_MAX_AGE_HOURS=6 