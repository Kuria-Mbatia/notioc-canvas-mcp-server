# Canvas MCP Server Docker Environment Configuration
# Copy this file to .env and configure your Canvas API credentials

# Canvas LMS Configuration
CANVAS_API_URL=https://your-canvas-instance.instructure.com
CANVAS_ACCESS_TOKEN=your_canvas_access_token_here

# MCP Server Configuration
NODE_ENV=production
MCP_MODE=standalone
DEBUG=canvas-mcp:*

# Optional: Custom port configuration
# MCP_PORT=3000

# Optional: Logging configuration
# LOG_LEVEL=info
# LOG_FILE=/app/logs/canvas-mcp.log

# Docker-specific settings
COMPOSE_PROJECT_NAME=canvas-mcp
COMPOSE_FILE=docker-compose.yml
